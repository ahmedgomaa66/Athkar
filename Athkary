        function loadData(){
            const savedMorning=localStorage.getItem('morningAzkar');
            const savedEvening=localStorage.getItem('eveningAzkar');
            if(savedMorning){const parsed=JSON.parse(savedMorning);morningAzkar.forEach((z,i)=>{if(parsed[i])z.current=parsed[i].current})}
            if(savedEvening){const parsed=JSON.parse(savedEvening);eveningAzkar.forEach((z,i)=>{if(parsed[i])z.current=parsed[i].current})}
        }
        function saveData(){localStorage.setItem('morningAzkar',JSON.stringify(morningAzkar));localStorage.setItem('eveningAzkar',JSON.stringify(eveningAzkar))}
        function renderAzkar(type){
            const container=document.getElementById(type+'Azkar');
            const azkar=type==='morning'?morningAzkar:eveningAzkar;
            container.innerHTML=azkar.map((z,i)=>`<div class="zekr-card ${z.current>=z.count?'completed':''}" onclick="increment('${type}',${i})"><div class="zekr-text">${z.text}</div><div class="zekr-info"><span>Ø§Ø¶ØºØ· Ù„Ù„Ø¹Ø¯</span><span class="count ${z.current>=z.count?'completed':''}">${z.current}/${z.count}</span></div></div>`).join('');
            updateProgress(type);
        }
        function increment(type,index){
            const azkar=type==='morning'?morningAzkar:eveningAzkar;
            if(azkar[index].current<azkar[index].count){azkar[index].current++;saveData();renderAzkar(type)}
        }
        function updateProgress(type){
            const azkar=type==='morning'?morningAzkar:eveningAzkar;
            const total=azkar.reduce((s,z)=>s+z.count,0);
            const current=azkar.reduce((s,z)=>s+z.current,0);
            const p=Math.round((current/total)*100);
            document.getElementById(type+'Progress').textContent=p;
            document.getElementById(type+'Bar').style.width=p+'%';
        }
        function switchTab(type){
            document.querySelectorAll('.tab').forEach(t=>t.classList.remove('active'));
            document.querySelectorAll('.content').forEach(c=>c.classList.remove('active'));
            event.target.classList.add('active');
            document.getElementById(type).classList.add('active');
        }
        function resetAll(type){if(confirm('Ù‡Ù„ ØªØ±ÙŠØ¯ Ø¥Ø¹Ø§Ø¯Ø© Ø¶Ø¨Ø· Ø§Ù„Ø¹Ø¯Ø§Ø¯ØŸ')){const azkar=type==='morning'?morningAzkar:eveningAzkar;azkar.forEach(z=>z.current=0);saveData();renderAzkar(type)}}
        function setDate(){const options={weekday:'long',year:'numeric',month:'long',day:'numeric'};document.getElementById('currentDate').textContent=new Date().toLocaleDateString('ar-SA',options)}
        loadData();setDate();renderAzkar('morning');renderAzkar('evening');
